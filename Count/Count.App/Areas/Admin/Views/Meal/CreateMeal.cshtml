@model Count.Models.Meal
@{
    ViewData["Title"] = "CreateMeal";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1>Add meal</h1>
<form asp-area="Admin" asp-controller="Meal" asp-action="CreateMeal" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"> </div>
    @Html.HiddenFor(d => d.DayId)

    <div class="form-group">
        <label>Cource Title<i> (Breakfast, lunch, dinner and etc.)</i>:</label>
        <br />
        <input asp-for="CourceTitle" class="form-control" />
        <span asp-validation-for="CourceTitle" class="text-danger"></span>
    </div>

    <button class="btn btn-success"><i class="fas fa-book"></i> Add</button>
    <br />
    <a asp-area="Admin" asp-controller="Day" asp-action="AllMealsOfDay" asp-route-id="@Model.DayId"><i>Back </i></a>
</form>

